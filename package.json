{
  "name": "starttls-frontend",
  "version": "1.0.0",
  "description": "Static front end for the STARTTLS scanner",
  "scripts": {
    "sass:main": "node-sass sass/application.scss static/application.css",
    "sass:watch": "onchange 'sass/**/*.scss*' -- yarn run sass:main",
     "js:install": "mkdir static/vendor && cp node_modules/jquery/dist/jquery.min.js static/vendor/jquery.min.js",
    "build": "yarn run sass:main && hugo",
    "serve": "yarn run sass:main && parallelshell 'yarn run sass:watch' 'hugo serve'",
    "lint": "./node_modules/.bin/sass-lint -vq"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EFForg/starttls-frontend.git"
  },
  "author": "Electronic Frontier Foundation",
  "bugs": {
    "url": "https://github.com/EFForg/starttls-frontend/issues"
  },
  "dependencies": {
    "autoprefixer": "^7.1.2",
    "jquery": "^3.3.1",
    "node-sass": "^4.5.3",
    "onchange": "^3.2.1",
    "parallelshell": "^3.0.1",
    "sass-lint": "^1.12.1",
    "susy": "^2.2.12"
  }
}
